<idea-plugin>
    <id>me.haroldmartin.intellijpluginevaluateselectedexpression</id>
    <name>Evaluate Selected Expression Inline</name>
    <vendor email="me@haroldmartin.me" url="https://github.com/hbmartin/">Harold Martin</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        <![CDATA[
          A plugin to evaluate a selected expression (i.e. math) and replace it inline.
        ]]>
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <language>KOTLIN</language>
            <className>me.haroldmartin.intellijpluginevaluateselectedexpression.EvaluateExpression</className>
            <category>SDK intentions</category>
        </intentionAction>
    </extensions>
</idea-plugin>
